<div class='title_tools'>
  <a class="btn btn-large btn-warning" <%= link_to(t("agenda.index"), agendas_path) %> </a>
</div>

<div class='title_page'> <%= t('agenda_item.show') %> </div>

<div class='section'>
  <div class='label1 top req'> <%=t("agenda.agenda_date") %>: </div>
  <span class="label label-success"><%= @agenda_item.scheduled_to.to_date.to_s_br %></span>
  <div class='label1 top req'> <%=t("agenda_item.scheduled_to") %>: </div>
  <span class="label label-success"><%= @agenda_item.scheduled_to.strftime("%H:%M") %></span>
  <div class='label1 top req'> <%=t("agenda.doctor") %>: </div>
  <span class="label label-success"><%= doctor_name_from_agenda(@agenda_item.agenda_id) %></span>
  <div class='label1 top req'> <%=t("agenda.room") %>: </div>
  <%= room_name_from_agenda(@agenda_item.agenda_id) %>
  <div class='label1 top req'> <%=t("agenda_item.patient") %>: </div>
  <%= link_to(@agenda_item.patient.name, patient_path(@agenda_item.patient_id)) unless @agenda_item.patient.nil? %>
</div>

